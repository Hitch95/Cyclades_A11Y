{
  "tasks": {
    "dev": "deno run --allow-all --watch api/deploy.ts",
    "start": "deno run --allow-all api/deploy.ts",
    "build": "deno compile --allow-all api/deploy.ts",
    "lint": "deno lint"
  },
  "imports": {
    "@supabase/supabase-js": "jsr:@supabase/supabase-js@^2.46.1",
    "cors": "https://deno.land/x/cors/mod.ts",
    "oak": "https://deno.land/x/oak/mod.ts",
    "fmt/": "https://deno.land/std@0.224.0/fmt/",
    "@std/fs": "jsr:@std/fs@^1.0.5",
    "@tajpouria/cors": "jsr:@tajpouria/cors@^1.2.1"
  },
  "compileOptions": {
    "strict": "true",
    "target": "ESNext",
    "rootDir": "./api",
    "resolveJsonModule": true,
    "outDir": "./build",
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true
  }
}
